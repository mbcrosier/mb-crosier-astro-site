---
interface Props {
  images: {
    src: string;
    alt: string;
    caption?: string;
  }[];
}

const { images } = Astro.props;
---

<div class="image-grid">
  {images.map(image => (
    <figure class="image-container">
      <img src={image.src} alt={image.alt} />
      {image.caption && <figcaption>{image.caption}</figcaption>}
    </figure>
  ))}
</div>

<style>
  .image-grid {
    display: flex;
    gap: 1rem;
    margin: 1.5rem 0;
    flex-wrap: wrap;
    align-items: flex-start;
  }

  .image-container {
    flex: 1;
    text-align: center;
    margin: 0;
    min-width: 200px;
  }

  img {
    width: 100%;
    max-width: 300px;
    border-radius: 8px;
    border: 1px solid #eee;
    margin: 0 auto;
  }

  figcaption {
    margin-top: 0.5rem;
    font-size: 0.95em;
    color: #666;
  }

  @media (max-width: 600px) {
    .image-grid {
      flex-direction: column;
    }

    .image-container {
      width: 100%;
    }

    img {
      max-width: 100%;
    }
  }
</style> 