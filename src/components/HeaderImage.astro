---
import { Image } from 'astro:assets';
import mbHeadshot from '../assets/mb-no-background.png';
const { src, ...attrs } = Astro.props;
---
<div>
        <Image src={mbHeadshot} alt="Headshot of MB Crosier" />
      <h1>MB Crosier</h1>
</div>

<script>
  const randomColor = "#"+((1<<24)*Math.random()|0).toString(16); 
 document.documentElement.style.setProperty('--main-bg-color', randomColor);
</script>

<style>
  img {
    border-radius: calc(40px + 5vw);
    width: calc(40px + 5vw);
    height: calc(40px + 5vw);
    margin: 0px 10px;
    --main-bg-color: #83c5be;
    background-color: var(--main-bg-color); /* to do: make random color generation */ 
  }

  h1{
    font-size:calc(25px + 5vw);
    font-family: "Yellowtail", cursive;
    padding: 0px 10px;

  }
  div{
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 20px 20px;
  }

</style>

