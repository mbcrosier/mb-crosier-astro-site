---
import { Image } from 'astro:assets';
import mbHeadshot from '../assets/mb-headshot.jpg';
const { src, ...attrs } = Astro.props;
---
<div>
    <Image src={mbHeadshot} alt="Headshot of MB Crosier" />
    <h1>MB Crosier</h1>
</div>

<style>
  img {
    border-radius: 100px;
    width: 120px;
    height: 120px;
    margin: 0px 10px;
  }
  h1{
    font-size: 60px;
    margin: 0px 10px;

  }
  div{
    display: flex;
    align-items: center;
    padding: 10px;
    margin:10px;
  }
</style>