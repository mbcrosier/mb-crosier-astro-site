---
import { Image } from 'astro:assets';
import mbHeadshot from '../assets/mb-no-background.png';
const { src, ...attrs } = Astro.props;
---
<div>
        <Image src={mbHeadshot} alt="Headshot of MB Crosier" />
      <h1>MB Crosier</h1>
</div>

<style>
  img {
    border-radius: calc(40px + 5vw);
    width: calc(40px + 5vw);
    height: calc(40px + 5vw);
    margin-right: 10px;
    --main-bg-color: #83c5be;
    background-color: var(--main-bg-color); /* to do: make random color generation */ 
  }

  img:hover {
    background-color: #05668D;
  }

  h1{
    font-size:calc(30px + 3vw);
    font-family: "Yellowtail", cursive;
    color: #05668D;
    margin: 0px 0px 0px 10px;
    line-height: 100%;
  }

  h1:hover{
    color: #83c5be;
  }


  div{
    display: flex;
    align-items: center;
    justify-content: center;
   margin: 20px 0px;
  }

</style>