---
interface Props {
  class?: string;
  style?: string;
}

const { class: className, style } = Astro.props;
---

<div class:list={["mdx-content", className]} data-style={style}>
  <slot />
</div>

<style is:global>
  .mdx-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .mdx-content[data-style*="display: flex"] {
    flex-direction: row;
    gap: 16px;
    margin: 1.5rem 0;
    flex-wrap: wrap;
    align-items: flex-start;
  }

  .mdx-content[data-style*="flex: 1"] {
    flex: 1;
    text-align: center;
  }

  .mdx-content img {
    width: 100%;
    max-width: 300px;
    border-radius: 8px;
    border: 1px solid #eee;
    margin: 0 auto;
  }

  .mdx-content figcaption {
    margin-top: 0.5rem;
    font-size: 0.95em;
    color: #666;
  }

  @media (max-width: 600px) {
    .mdx-content[data-style*="display: flex"] {
      flex-direction: column !important;
      gap: 1rem !important;
    }

    .mdx-content img {
      max-width: 100%;
    }
  }
</style> 