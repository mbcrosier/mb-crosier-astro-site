---
import '../styles/global.css';
const { pageTitle, description, image } = Astro.props;
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

// Default images
const defaultImage = {
  url: '/assets/abstract-swirl.png',
  alt: 'An abstract swirl in shades of blue and yellow'
};

// Convert relative image paths to absolute URLs
const finalImage = image ? {
  url: image.url.replace('../../', '/'),
  alt: image.alt
} : defaultImage;

// Ensure the URL is absolute
const imageUrl = finalImage.url.startsWith('http') 
  ? finalImage.url 
  : `${import.meta.env.SITE || 'https://mbcrosier.com'}${finalImage.url}`;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>

		<!-- Primary Meta Tags -->
		{description && <meta name="description" content={description} />}

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={pageTitle} />
		<meta property="og:site_name" content="MB Crosier" />
		{description && <meta property="og:description" content={description} />}
		<meta property="og:image" content={imageUrl} />
		<meta property="og:image:alt" content={finalImage.alt} />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={pageTitle} />
		{description && <meta name="twitter:description" content={description} />}
		<meta name="twitter:image" content={imageUrl} />
		<meta name="twitter:image:alt" content={finalImage.alt} />

		<!-- fonts and icons -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Yellowtail&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/1a310a18cd.js" crossorigin="anonymous"></script>
	</head>
	<body>
		<nav>
			<Header />
			<Navigation />
	    </nav>
        <slot />
		<script>
		</script>
		<Footer />
	</body>
</html>
