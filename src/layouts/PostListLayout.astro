---
import BaseLayout from './BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';
const { pageTitle } = Astro.props;
const allPosts = await Astro.glob('../pages/posts/*.md');
const filteredPosts = allPosts.filter((post) => post.frontmatter.tags.includes(pageTitle));
---

<BaseLayout pageTitle={pageTitle}>
  <div>
    <slot />
  </div>
  <hr class="dotted">
		{filteredPosts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} description={post.frontmatter.description} />)}
</BaseLayout>
